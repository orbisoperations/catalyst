{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"moduleResolution": "node16",
		"module": "node16",
		"outDir": "dist",
		"sourceMap": true,
		"jsx": "react",
		"esModuleInterop": true,
		"allowJs": true
	},
	"include": ["source"],
	"exclude": ["node_modules"],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true,
		"experimentalSpecifierResolution": "node"
	}
}