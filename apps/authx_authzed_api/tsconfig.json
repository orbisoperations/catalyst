{
	"include": ["./**/*.ts", "./**/*.d.ts"],
	"exclude": ["test/**", "tests/**", "**/*.spec.ts", "**/*.test.ts", "vitest.config.ts", "global-setup.ts", "global-teardown.ts"],
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["esnext"],
		"noEmit": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"types": ["@cloudflare/workers-types", "@cloudflare/vitest-pool-workers"]
	}
}
