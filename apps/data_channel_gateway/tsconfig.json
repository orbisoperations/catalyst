{
    "include": ["./**/*.ts", "./**/*.d.ts"],
    "exclude": [
        "test/**",
        "tests/**",
        "**/*.spec.ts",
        "**/*.test.ts",
        "vitest.config.ts",
        "global-setup.ts",
        "global-teardown.ts"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "lib": ["ESNext"],
        "types": [
            "@cloudflare/workers-types/experimental",
            "@cloudflare/workers-types",
            "@cloudflare/vitest-pool-workers"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx"
    }
}
