{
    "name": "@catalyst/catalyst-ui",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "vercel-build": "next build",
        "ndev": "next dev --port 4000",
        "pages:dev": "pnpm wrangler pages dev ./.vercel/output/static --port 4000",
        "pages:build": "pnpm next-on-pages",
        "pages:deploy": "pnpm run pages:build && wrangler pages deploy ./.vercel/output",
        "deploymentStaging": "npx @cloudflare/next-on-pages && pnpm wrangler pages deploy --branch staging --env preview",
        "deploymentDemo": "npx @cloudflare/next-on-pages && pnpm wrangler pages deploy --branch demo --env production",
        "bdev": "pnpm pages:build && pnpm pages:dev",
        "dev": "pnpm pages:build --skip-build && pnpm pages:dev",
        "cbuild": "npx @cloudflare/next-on-pages@1",
        "start": "next start",
        "lint": "next lint"
    },
    "dependencies": {
        "@apollo/client": "^3.13.7",
        "@catalyst/issued-jwt-registry": "workspace:*",
        "@catalyst/schema_zod": "workspace:*",
        "@chakra-ui/button": "^2.1.0",
        "@chakra-ui/card": "^2.2.0",
        "@chakra-ui/layout": "^2.3.1",
        "@chakra-ui/react": "^2.10.7",
        "@chakra-ui/system": "^2.6.2",
        "@chakra-ui/theme-tools": "^2.2.6",
        "@cloudflare/next-on-pages": "^1.13.12",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@heroicons/react": "^2.2.0",
        "next": "14.1.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "0.8.15",
        "@cloudflare/workers-types": "^4.20250413.0",
        "@types/node": "^22.14.1",
        "@types/react": "^19.1.1",
        "@types/react-dom": "^19.1.2",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.24.0",
        "eslint-config-next": "15.3.0",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "tailwindcss": "^3.4.17",
        "tslog": "^4.9.3",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "vitest": "3.1.1",
        "wrangler": "^4.10.0"
    }
}
